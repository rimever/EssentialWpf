<Window x:Class="Chapter6_24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter6_24"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type BitmapImage}">
            <Border>
                <Border
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="4"
                    BorderThickness="1"
                    BorderBrush="Black"
                    Padding="4"
                    Background="White">
                    <Border.BitmapEffect>
                        <DropShadowBitmapEffect Softness=".2" ShadowDepth="1"/>
                    </Border.BitmapEffect>
                    <Image Source="{Binding}"/>
                </Border>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl>
            <ContentControl.Content>
                <BitmapImage UriSource="\\Mac\Home\Downloads\airplane-5216583_640.jpg" />
            </ContentControl.Content>
        </ContentControl>
    </Grid>
</Window>
