<Window x:Class="Chapter3_12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter3_12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" VerticalAlignment="Top">クリック</Button>
            <StackPanel Margin="5" VerticalAlignment="Top">
                <CheckBox IsChecked="True">クリック</CheckBox>
                <CheckBox IsChecked="False">クリック</CheckBox>
                <CheckBox IsChecked="{x:Null}">クリック</CheckBox>
            </StackPanel>
            <StackPanel Margin="5" VerticalAlignment="Top">
                <RadioButton>クリック</RadioButton>
                <RadioButton IsChecked="True">クリック</RadioButton>
                <RadioButton>クリック</RadioButton>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
